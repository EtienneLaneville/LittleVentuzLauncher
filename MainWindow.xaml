<Window x:Class="LittleVentuzLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LittleVentuzLauncher"
        mc:Ignorable="d"
        Title="Little Ventuz Launcher"
        SizeToContent="Height"
        Height="500"
        Width="400">

    <Grid Margin="4">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Margin="2" Grid.Row="0"
                  Header="Cluster">

            <StackPanel Orientation="Vertical">
            
                <TextBlock Text="Available machines:"
                           Margin="2" />

                <ListView x:Name="availableMachinesListView"
                          VerticalContentAlignment="Stretch" Height="100"
                          ItemsSource="{Binding DiscoveredMachines}">

                    <ListView.View>
                        
                        <GridView AllowsColumnReorder="False">
                            
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}"
                                            Header="Name"
                                            Width="100" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Version}"
                                            Header="Version"
                                            Width="80" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=IPAddress}"
                                            Header="IP"
                                            Width="90" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=State}"
                                            Header="State"
                                            Width="80" />
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <EventSetter Event="MouseDoubleClick"
                                         Handler="MachineDoubleClick" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                </ListView>

                <Button Content="Add to Cluster"
                        Width="100"
                        Height="24"
                        HorizontalAlignment="Left"
                        Margin="0,4"
                        Command="{Binding AddMachinesToClusterCommand}"
                        CommandParameter="{Binding SelectedItems, ElementName=availableMachinesListView}" />

                <TextBlock Text="Cluster machines:"
                           Grid.Row="2"
                           Margin="2" />

                <ListView x:Name="clusterMachinesListView"
                          Grid.Row="3"
                          VerticalContentAlignment="Stretch"
                          Height="100"
                          ItemsSource="{Binding ClusterMachines}">

                    <ListView.View>

                        <GridView AllowsColumnReorder="False">

                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}"
                                            Header="Name"
                                            Width="100" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=Version}"
                                            Header="Version"
                                            Width="80" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=IPAddress}"
                                            Header="IP"
                                            Width="90" />
                            <GridViewColumn DisplayMemberBinding="{Binding Path=State}"
                                            Header="State"
                                            Width="80" />
                        </GridView>
                    </ListView.View>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <EventSetter Event="MouseDoubleClick"
                                         Handler="MachineDoubleClick" />
                        </Style>
                    </ListView.ItemContainerStyle>

                </ListView>

            </StackPanel>

        </GroupBox>

        <GroupBox Margin="2" Grid.Row="1"
                  Header="VPRs">

            <StackPanel Orientation="Vertical">

                <TextBox Text="{Binding VprList, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         Height="100" />

                <StackPanel Orientation="Horizontal">

                    <Button Content="Start Launching"
                            Background="GreenYellow"
                            Width="100"
                            Height="24"
                            HorizontalAlignment="Left"
                            Margin="0,4"
                            Command="{Binding StartLaunchingCommand}" />

                    <Button Content="Stop Launching"
                            Background="Crimson"
                            Width="100"
                            Height="24"
                            Margin="4,4"
                            HorizontalAlignment="Left"
                            Command="{Binding StopLaunchingCommand}" />

                </StackPanel>

            </StackPanel>

        </GroupBox>
        
    </Grid>
</Window>
